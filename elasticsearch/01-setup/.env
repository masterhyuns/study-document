# Elasticsearch Docker Environment Variables
# ==========================================

# Stack Version
STACK_VERSION=8.11.0

# Cluster Configuration
CLUSTER_NAME=es-docker-cluster
LICENSE=basic

# Port Configuration
ES_PORT=9200
KIBANA_PORT=5601
CEREBRO_PORT=9000
HEAD_PORT=9100
LOGSTASH_PORT=5000

# Memory Limits
ES_MEM_LIMIT=1073741824
KIBANA_MEM_LIMIT=536870912
LOGSTASH_MEM_LIMIT=268435456

# JVM Options
ES_JAVA_OPTS=-Xms1g -Xmx1g
LS_JAVA_OPTS=-Xms256m -Xmx256m

# Security (for production)
ELASTIC_PASSWORD=changeme
KIBANA_PASSWORD=changeme

# Monitoring
MONITORING_ENABLED=true
APM_ENABLED=false